<div class="box auth-box">
  <h1 class="title">Change Password</h1>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.hidden_field :reset_password_token %>

    <div class="field">
      <%= f.label :password, "New password", class: "label" %>
      <div class="control">
        <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "input" %>
      </div>
      <% if @minimum_password_length %>
        <p class="help">Minimum <%= @minimum_password_length %> characters</p>
      <% end %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, "Confirm new password", class: "label" %>
      <div class="control">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input" %>
      </div>
    </div>

    <div class="field">
      <%= f.submit "Change password", class: "button is-fullwidth" %>
    </div>
  <% end %>

  <div class="auth-links">
    <%= render "devise/shared/links" %>
  </div>
</div>
